<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wellmax8.tobuy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_icon_tobuy_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"

        >

        <activity android:name=".stat_things"/>
        <activity
            android:name=".add_thing"
            android:label="@string/action_bar_add_new_thing"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".things" />
        <activity
            android:name=".add_category"
            android:label="@string/action_bar_add_new_category"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".data.toBuyProvider"
            android:authorities="com.wellmax8.android.toBuy"
            android:exported="false" />
    </application>

</manifest>