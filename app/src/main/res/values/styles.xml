<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <!-- style for textView  in main activity that says that there is no items start by adding one-->
    <style name="main_textView">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:text">@string/add_new_category</item>
            <item name="android:layout_centerInParent">true</item>
            <item name="android:textSize">18sp</item>
            <item name="android:textColor">#000</item>

    </style>

    <!-- style for imageView that says that there is no items start by addin one-->
    <style name="main_imageView_add">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- style for floating button in main activity-->
    <style name="main_floatingButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

   <style name="main_listView">
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">match_parent</item>
       <item name="android:drawSelectorOnTop">true</item>
       <item name="android:divider">@null</item>
   </style>


    <!--style for Linear layout in each row  in add category activity-->
    <style name="add_category_Linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!--style for Relative layout in each row  in add category activity-->
    <style name="add_category_Relative">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/circle_accent_color</item>
        <item name="android:layout_margin">16dp</item>
    </style>


<!--style for textView to in add category activity-->
    <style name="add_category_add_field">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--style for textView to in add category activity-->
    <style name="bought_not_bought_stat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--style for EditText to in add category activity-->
    <style name="add_category_add_field_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>

    </style>


    <!--style for ImageView to show color to in add category activity-->
    <style name="add_category_color">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_centerInParent">true</item>

    </style>
</resources>
