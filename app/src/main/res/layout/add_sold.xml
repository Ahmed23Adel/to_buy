<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wholeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="3dp"
            tools:context=".add_category">

            <LinearLayout style="@style/add_category_Linear">

                <TextView
                    style="@style/add_category_add_field"
                    android:layout_width="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="16dp"
                    android:text="@string/add_category_textView_add_Name" />

                <TextView
                    style="@style/add_category_add_field"
                    android:layout_gravity="center"
                    android:padding="0dp"
                    android:text="*"
                    android:textColor="@color/red" />

                <EditText
                    android:id="@+id/add_sold_name"
                    style="@style/add_category_add_field_edit"
                    android:hint="@string/ex_refrigerator"

                    />

            </LinearLayout>

            <LinearLayout style="@style/add_category_Linear"

                >

                <TextView
                    style="@style/add_category_add_field"
                    android:text="@string/add_category_textView_add_desc" />

                <EditText
                    android:id="@+id/add_sold_desc"
                    style="@style/add_category_add_field_edit"
                    android:hint="@string/add_category_textView_add_desc" />

            </LinearLayout>

            <LinearLayout style="@style/add_category_Linear"

                >

                <TextView
                    style="@style/add_category_add_field"
                    android:text="@string/add_category_textView_add_extra" />

                <EditText
                    android:id="@+id/add_sold_extra"
                    style="@style/add_category_add_field_edit"
                    android:hint="@string/add_category_textView_add_extra" />

            </LinearLayout>

            <LinearLayout style="@style/add_category_Linear"

                >

                <TextView
                    style="@style/add_category_add_field"
                    android:text="@string/price" />

                <EditText
                    android:id="@+id/add_sold_price"
                    style="@style/add_category_add_field_edit"
                    android:hint="@string/ex_75"
                    android:inputType="numberDecimal" />

            </LinearLayout>


            <LinearLayout
                style="@style/add_category_Linear"
                android:orientation="horizontal"

                >

                <CheckBox
                    android:id="@+id/add_sold_isBought"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:text="@string/is_bought" />

                <TextView
                    android:id="@+id/add_sold_notNow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:text="@string/not_today"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#1834DB"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="16dp"
                        android:text="@string/add_new_shop"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                    <TextView
                        android:id="@+id/add_sold_chooseExistingShops"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:gravity="center"
                        android:text="@string/choose_from_existing_shops"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/blue_dark" />
                </LinearLayout>

                <LinearLayout style="@style/add_category_Linear">

                    <TextView
                        style="@style/add_category_add_field"
                        android:layout_width="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="0dp"
                        android:paddingBottom="16dp"
                        android:text="@string/name" />

                    <TextView
                        android:id="@+id/shopMustAdd"
                        style="@style/add_category_add_field"
                        android:layout_gravity="center"
                        android:padding="0dp"
                        android:text="*"
                        android:textColor="@color/red"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/add_shop_name"
                        style="@style/add_category_add_field_edit"
                        android:hint="@string/zara"

                        />


                </LinearLayout>

                <LinearLayout style="@style/add_category_Linear">

                    <TextView
                        style="@style/add_category_add_field"
                        android:text="@string/address" />

                    <EditText
                        android:id="@+id/add_shop_address"
                        style="@style/add_category_add_field_edit"
                        android:hint="@string/ex_down_town"

                        />

                </LinearLayout>

                <LinearLayout style="@style/add_category_Linear">

                    <TextView
                        style="@style/add_category_add_field"
                        android:text="@string/facebook_link" />

                    <EditText
                        android:id="@+id/add_shop_facebookLink"
                        style="@style/add_category_add_field_edit"
                        android:autoLink="email|web"
                        android:hint="@string/facebook_link_ex"
                        android:linksClickable="true"
                        android:textColorLink="@color/blue_dark" />

                </LinearLayout>

                <LinearLayout style="@style/add_category_Linear">

                    <TextView
                        style="@style/add_category_add_field"
                        android:text="@string/notes" />

                    <EditText
                        android:id="@+id/add_shop_notes"
                        style="@style/add_category_add_field_edit"
                        android:hint="@string/notes"

                        />

                </LinearLayout>

                <Button
                    android:id="@+id/add_sold_add_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:text="@string/add_contact_to_that_shop"
                    android:textColor="@color/blue_dark" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/contacts_recyclerView"
                    style="@style/main_listView"
                    android:clipToPadding="false"
                    android:dividerHeight="16dp"
                    android:drawSelectorOnTop="true"
                    android:paddingTop="56dp"
                    android:paddingBottom="16dip"
                    android:layout_margin="16dp"
                     />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>